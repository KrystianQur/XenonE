<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gif">

    <EditText
        android:id="@+id/gifl"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Gif URL"
        android:inputType="textUri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gifclan"
        android:layout_width="325dp"
        android:layout_height="54dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="43dp"
        android:text="Set Gif On Clan!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gifl" />

    <Button
        android:id="@+id/gif"
        android:layout_width="325dp"
        android:layout_height="54dp"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="43dp"
        android:text="Set GIF Photo!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gifl" />

    <TextView
        android:id="@+id/hel2"
        android:layout_width="330dp"
        android:layout_height="400dp"
        android:layout_marginTop="20dp"
        android:fontFamily="cursive"
        android:text="Here You Can Set Gif In Your Clan Or Profile, Please Note That Only Giphy And Tenor Works In Setting Of Gif, Also If You Are Setting Gif For Clan, You Must Be Elder Or Cheif To Do That!"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gifclan" />

</android.support.constraint.ConstraintLayout>